<script type="text/javascript">
var autreact = false;
var table = $('#tableau_resultat').dataTable( {
    "autoWidth" : true,
    "processing": true,
    "scrollX": "100%",
    "scrollY": "400px",
     "scrollCollapse": true,
 	"dom": 'C<"clear">RtiS',
    "deferRender":true,
    "scroller": {
          "loadingIndicator": true
      },
     "colReorder": {
          "fixedColumns": 1 ,      //colonnes non deplacables a droite
          "fixedColumnsRight": 3  //colonnes non deplacables a droite
                },
     "colVis": {
                    exclude: [0, 5, 6, 7]
                },
    "language": { "url": "/js/dataTables.french.lang" },
	"columns": [
	               {name:"B.sk_client", "visible":false},
				   {name:"numcde"},
	               {name:"datdem"},
				   {name:"lb_nom"},
				   {name:"datliv"},
	               {name:"B.statut" , "visible":false},
	               { "orderable": false },
	               { "orderable": false }
	             ],
     "ajax": "/boncdes/tableau_json",
     "serverSide": true,
   	 "stateSave":true       	 
	});	
	$('#tableau_resultat tbody').on('click', 'tr', function () {
			if ($(this).hasClass('selected')) {
				$(this).removeClass('selected');
			}
			else {
				table.$('tr.selected').removeClass('selected');
				$(this).addClass('selected');
				data = table.fnGetData(this);
				numcde =  data[1];
				action(numcde);
			}
		});
function activer(numcde){
	//appel suppression avec confirmation
	autreact = true;
	confirm_url_ajax('Voulez-vous vraiment réactiver ce bon de commande ?',
				     '/boncdes/activer/'+numcde,table);
				 }
function desactiver(numcde){
	//appel suppression avec confirmation
	autreact = true;
	confirm_url_ajax('Voulez-vous vraiment désactiver ce bon de commande ?',
					 '/boncdes/desactiver/'+numcde,table);
			 
	}
       
function editer(numcde){
//appel fonction editer	 
	   autreact = true;
	   window.location.href='/boncdes/modifier/'+numcde;
}

function action(numcde) {
		//appel reactivation avec confirmation
		chaine = '<br>\n\<a href="#" onclick=imprimer("' + numcde + '");><img src="/img/pictos/pdf.gif"> Imprimer le bon de commande</a><br><br>' +
					'<a href="/boncdes/mailboncde/' + numcde + '/0" onclick="$(\'#loader\').show();"><img src="/img/pictos/mail.png"> Envoyer le bon de commande par mail</a><br><br><br>';
		if (!autreact)
			boite_menu("Bon de cde n° " + numcde, chaine);
		autreact = false;
}
</script>
{/literal}